{
	"compilerOptions": {
		// Environment setup & latest features
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "Preserve",
		"moduleDetection": "force",
		"jsx": "react-jsx",
		"allowJs": true,

		// Bundler mode
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"verbatimModuleSyntax": true,
		"noEmit": true,

		// Best practices
		"strict": true,
		"skipLibCheck": true,
		"noFallthroughCasesInSwitch": true,
		"noUncheckedIndexedAccess": true,
		"noImplicitOverride": true,

		// Workspace path aliases
		"paths": {
			"@glaze/shared": ["./packages/shared/src"],
			"@glaze/logger": ["./packages/logger/src"],
			"@glaze/core": ["./packages/core/src"],
			"@glaze/convergence": ["./packages/convergence/src"],
			"@glaze/backend": ["./packages/backend/src"],
			"@glaze/admin": ["./packages/admin/src"],
			"@glaze/cli": ["./packages/cli/src"]
		}
	}
}
